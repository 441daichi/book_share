<%= render "shared/second_header" %>

<div class="login-back">
  <div class='login-main'>
    <div class='form-header'>
      <h1 class='form-header-text'>ログイン</h1>
    </div>

    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-wrap') do |f| %>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text"><%= f.label "メールアドレス" %></label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text"><%= f.label "パスワード" %></label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", autocomplete: "current-password" %>
      </div>

      <div class='login-btn'>
        <%= f.submit "ログイン", class: "login-btn" %>
      </div>
    <% end %>

  </div>
</div>

<%= render "shared/second_footer" %>
