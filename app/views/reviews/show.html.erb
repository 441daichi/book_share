<%= render partial:'shared/header' %>

<div calss = "main">
  <div class="book-detail">
    <p>投稿者: <%= @review.user.nickname %></p>
    <div class="book-image">
      <%= image_tag @review.image, alt: "book_title" %>
    </div>
    <div class="book-info">
      <h1><%= @review.title %></h1>
      <p>著者: <%= @review.author %></p>
      <p><%= @review.evaluation.name %></p>
      <p><%= @review.impression %></p>

      <% if user_signed_in? && current_user.id == @review.user_id %>
        <%= link_to '編集', "#", method: :get, class: "review-red-btn" %>
          <p class="or-text">or</p>
        <%= link_to '削除', "#", class:"review-destroy" %>
      <% end %>

      <% if user_signed_in? && current_user.id != @review.user_id %>
        <%= link_to "コメント", "#", class:"review-red-btn" %>
      <% end %>

    </div>
  </div>
</div>

<%= render partial:'shared/footer' %>